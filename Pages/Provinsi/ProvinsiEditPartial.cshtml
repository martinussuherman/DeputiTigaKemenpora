@model IProvinsiEditModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group">
   <label class="control-label">Nama</label>
   <ejs-textbox
      id="nama"
      ejs-for="Provinsi.Nama"
      placeholder="Nama Provinsi"
      aria-mycontrol="ej2"
   >
   </ejs-textbox>
   <span asp-validation-for="Provinsi.Nama" class="text-danger"></span>
</div>

<div class="form-row">
   <div class="form-group col-sm-12 col-md-6">
      <label class="control-label">Lintang</label>
      <ejs-numerictextbox
         id="lat"
         ejs-for="Provinsi.Lat"
         format="n6"
         placeholder="Lintang"
         aria-mycontrol="ej2">
      </ejs-numerictextbox>
      <span asp-validation-for="Provinsi.Lat" class="text-danger"></span>
   </div>

   <div class="form-group col-sm-12 col-md-6">
      <label class="control-label">Bujur</label>
      <ejs-numerictextbox
         id="long"
         ejs-for="Provinsi.Long"
         format="n6"
         placeholder="Bujur"
         aria-mycontrol="ej2">
      </ejs-numerictextbox>
      <span asp-validation-for="Provinsi.Long" class="text-danger"></span>
   </div>
</div>

<input type="submit" value="Simpan" class="btn btn-outline-secondary" />
<a asp-page="./Index" class="btn btn-outline-info">Kembali</a>
