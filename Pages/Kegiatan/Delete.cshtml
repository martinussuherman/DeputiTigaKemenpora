@page "{id:int?}"
@model DeleteModel

@{
   Layout = "_CommonLayout";
}

<div class="card-body">
   <div class="form-group">
      <label class="control-label">Penanggung Jawab</label>
      <input asp-for="Kegiatan.NamaPenanggungJawab" class="form-control" disabled />
   </div>

   <div class="form-group">
      <label class="control-label">Nama Kegiatan</label>
      <input asp-for="Kegiatan.Nama" class="form-control" disabled />
   </div>

   <div class="form-group">
      <label class="control-label">Tempat</label>
      <input asp-for="Kegiatan.Tempat" class="form-control" disabled />
   </div>

   <div class="form-group">
      <label class="control-label">Tanggal Mulai</label>
      <input type="text" value="@Model.Kegiatan.TanggalMulaiView" class="form-control" disabled />
   </div>

   <div class="form-group">
      <label class="control-label">Tanggal Selesai</label>
      <input type="text" value="@Model.Kegiatan.TanggalSelesaiView" class="form-control" disabled />
   </div>

   <div class="form-group">
      <label class="control-label">Nama Pejabat Pembuka</label>
      <input asp-for="Kegiatan.NamaPejabatPembuka" class="form-control" disabled />
   </div>

   <div class="form-group">
      <label class="control-label">Jumlah Peserta</label>
      <input asp-for="Kegiatan.JumlahPeserta" class="form-control" disabled />
   </div>

   <form method="post">
      <input type="hidden" asp-for="Kegiatan.Id" />
      <input type="submit" value="Hapus" class="btn btn-danger" />
      <a asp-page="./Index" class="btn btn-warning">Kembali</a>
   </form>

</div>
