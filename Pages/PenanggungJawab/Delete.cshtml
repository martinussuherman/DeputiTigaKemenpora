@page "{id:int?}"
@model DeleteModel

@{
    Layout = "_CommonLayout";
}

<div class="card-body">
    <div class="form-group">
        <label class="control-label">Id</label>
        <input asp-for="PenanggungJawab.Id" class="form-control" disabled/>
    </div>

    <div class="form-group">
        <label class="control-label">Nama</label>
        <input asp-for="PenanggungJawab.Nama" class="form-control" disabled/>
    </div>

    <form method="post">
        <input type="hidden" asp-for="PenanggungJawab.Id" />
        <input type="submit" value="Hapus" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-warning">Kembali</a>
    </form>
</div>
